#!/bin/bash
#
#SBATCH --job-name mini-profile
#SBATCH --mem-per-cpu=110G
#SBATCH --time=0:30:00

bin=$1
node=4
cores=36
np=$((node * cores))

px=4
py=6
pz=6
n=50
nvar=100

mpirun -n ${np} ./$bin --npx ${px} --npy ${py} --npz ${pz} --num_vars ${nvar} --nx ${n} --ny ${n} --nz ${n} --stencil 23 --num_tsteps 100